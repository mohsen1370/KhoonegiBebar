<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    android:id="@+id/rl_dialog">
    <TextView
        android:id="@+id/txt_titleerror"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="22dp"
        android:text="لطفا اتصال خود به اینترنت را بررسی کنید."
        android:gravity="center"
        android:fontFamily="@font/irsans"
        android:textColor="#000000"
        android:textSize="10dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/txt_titleerror">
        <Button
            android:id="@+id/btn_exitslpash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:background="#000000"
            android:layout_marginLeft="0.1dp"
            android:text="خروج"
            android:textSize="10dp"
            android:textColor="#ffffff"
            android:fontFamily="@font/irsans"
            android:foreground="@drawable/button_ripple"/>
        <Button
            android:id="@+id/btn_retryslpash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="0.1dp"
            android:layout_weight="1"
            android:clickable="true"
            android:background="#000000"
            android:text="تلاش مجدد"
            android:textSize="10dp"
            android:textColor="#ffffff"
            android:fontFamily="@font/irsans"
            android:foreground="@drawable/button_ripple"/>
    </LinearLayout>

</RelativeLayout>