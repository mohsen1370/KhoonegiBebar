<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="3dp"
    android:clickable="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_food_selector">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_image_detailspay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/img_food"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/background_food_item"
            app:siRadius="5dp"
            app:siBorderWidth="1dp"
            app:siBorderColor="#cccccc"
            app:siSquare="true" />
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_namefood"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/cl_image_detailspay"
        app:layout_constraintRight_toLeftOf="@id/cl_image_detailspay">
        <TextView
            android:id="@+id/tv_titlefood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="نام غذا: قرمه سبزی"
            android:textColor="#807f7d"
            android:fontFamily="@font/irsans"
            android:textSize="12sp"
            app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_namefood"
        app:layout_constraintRight_toLeftOf="@id/cl_image_detailspay">
        <TextView
            android:id="@+id/tv_titlecount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تعداد: 5عدد"
            android:textColor="#807f7d"
            android:fontFamily="@font/irsans"
            android:textSize="12sp"
            app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_count"
        app:layout_constraintRight_toLeftOf="@id/cl_image_detailspay">
        <TextView
            android:id="@+id/tv_titleprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="قیمت هر واحد: 35000 تومان"
            android:textColor="#807f7d"
            android:fontFamily="@font/irsans"
            android:textSize="12sp"
            app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>