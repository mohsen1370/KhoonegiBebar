<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:textDirection="rtl"
    android:layoutDirection="rtl">
    <TextView
        android:id="@+id/tv_titlefilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="مرتب سازی"
        android:fontFamily="@font/irsans"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#FF979797"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_titlefilter"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <RadioGroup
        android:id="@+id/rg_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintRight_toRightOf="parent" >
        <RadioButton
            android:id="@+id/rg_sort_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="12sp"
            android:text="جدیدترین"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/rg_sort_lowpay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="12sp"
            android:text="ارزان ترین" />
        <RadioButton
            android:id="@+id/rg_sort_hightpay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="12sp"
            android:text="گران ترین" />
        <RadioButton
            android:id="@+id/rg_sort_hightstar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="12sp"
            android:text="امتیاز بالا" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/txt_title_exit"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/rg_sort">
        <Button
            android:id="@+id/btn_cancel_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:background="#000000"
            android:layout_marginLeft="0.1dp"
            android:text="لغو"
            android:textSize="10dp"
            android:textColor="#ffffff"
            android:fontFamily="@font/irsans"
            android:foreground="@drawable/button_ripple"/>
        <Button
            android:id="@+id/btn_accept_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="0.1dp"
            android:layout_weight="1"
            android:clickable="true"
            android:background="#000000"
            android:text="تایید"
            android:textSize="10dp"
            android:textColor="#ffffff"
            android:fontFamily="@font/irsans"
            android:foreground="@drawable/button_ripple"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>